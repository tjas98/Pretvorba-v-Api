    <div class="container-lg h-100">
      <div class="ustvari">
        <div class="card border-dark" style="padding-bottom: 10px;" >

          <div class="card-header bg-dark text-white">Ustvari tekmo</div>

          <div>
              <!--iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d31325.282550843705!2d14.522774429847034!3d46.055292090769285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ssl!2ssi!4v1603358504069!5m2!1ssl!2ssi" width="100%" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe-->
              <div id="mapa_ustvari_div" style="width:100%; height:450px;"> </div>

          </div>

          <div class="col-sm-12 col-md-12 col-lg-12">
            <form name="ustvari" method="post" action="/ustvari_tekmo" onsubmit="return validacijaTekmaUra()">

              <div class="">



                  <div class="form-group">

                      <input id="Input_Okno_LAT"  readonly type="hidden" class="form-control" name="lat" required>
                  </div>

                  <div class="form-group">

                      <input id="Input_Okno_LNG"  readonly type="hidden" class="form-control" name="lng" required>
                  </div>

                  <div class="form-group">
                      <label class="">Kraj</label>
                      <input id="Input_Okno_Kraj"  readonly type="text" class="form-control" name="kraj" required>
                  </div>

                <div class="form-group">
                  <label class="">Datum</label>
                  <input type="date" class="form-control" name="datum" required>
                </div>

                <div class="form-group">
                  <label class="">Ura</label>
                  <input type="time" class="form-control" name="ura" required>
                </div>

                <div class="form-group">

                  <label class="">Število igralcev</label>

                  <div class="form-row col-sm-12 col-md-12 col-lg-12">

                    <div class="form-group col-md-4">
                      <label class="">Min: </label>
                      <input type="number" min="4" max="16" step="2" value="4" class="form-control" name="minIgralcev" required>
                    </div>

                    <div class="form-group col-md-4">
                      <label class="">Max: </label>
                      <input type="number" min="4" max="16" step="2" value="6" class="form-control" name="maxIgralcev">
                    </div>

                    <div class="form-group col-md-4">
                      <label class="">Že prijavljeni: </label>
                      <input type="number" min="0" value="0" class="form-control" name="prijavljeni">
                    </div>

                  </div>

                </div>

                <div class="form-group">
                  <label class="">Opombe</label>
                  <textarea name="komentarji" class="form-control" rows="4" cols="36"  placeholder="Vnesite dodatne opombe"></textarea>
                </div>
                <div id="obvestilo" style="visibility: hidden" class="alert alert-danger">

                </div>
                <div class="text-center col-sm-12 col-md-12 col-lg-12">
                  <input type="submit" class="btn btn-success col-md-3 mt-1" value="Ustvari">
                  <input type="reset" class="btn btn-warning col-md-3 mt-1" value="Ponastavi">
                  <a href="/" class="btn btn-danger col-md-3 mt-1">Prekliči</a>
                </div>


              </div>
            </form>
          </div>

        </div>
      </div>
    </div>

